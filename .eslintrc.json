{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "project" : ["tsconfig.json"]
    },
    "rules": {
        "semi" : ["error", "always"],
        "quotes": ["error", "double"],
        "comma-dangle": ["error", "always"]
    }
}
